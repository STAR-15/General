@model General.Admin.Models.UserViewModel
@{
    ViewBag.Title = "Login";
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Login Admin</title>
    <link href="~/Content/css/login.css" rel="stylesheet" />
</head>
<body>
    <div class="login">
        <h1>Login</h1>
        @using (Html.BeginForm())
        {
                <div class="form-group">
                    @Html.TextBoxFor(t => t.UserName, new { @name = "u", placeholder = "用户名" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(t => t.Password, new { @name = "p", placeholder = "密码" })
                </div>
                <!-- Change this to a button or input when using this as a form -->
                <button type="submit" class="btn btn-primary btn-block btn-large">登录</button>
            @Html.ValidationSummary()
        }
    </div>
</body>
</html>