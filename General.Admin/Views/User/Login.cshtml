@model General.Admin.Models.UserViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                </div>
                                <div class="user">
                                    @using (Html.BeginForm())
                                    {
                                        <fieldset>
                                            <div class="form-group">
                                                @Html.TextBoxFor(t => t.UserName, new { @class = "form-control form-control-user", placeholder = "请输入用户名" })
                                            </div>
                                            <div class="form-group">
                                                @Html.PasswordFor(t => t.Password, new { @class = "form-control form-control-user", placeholder = "请输入密码" })
                                            </div>
                                            <!-- Change this to a button or input when using this as a form -->
                                            <input type="submit" class="btn btn-lg btn-success btn-block" value="登录" />
                                        </fieldset>
                                        @Html.ValidationSummary()
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>